<% include template/header.ejs %>
<% include template/nav.ejs%>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editar Flota</h1>
  </div>
  <div class="container">
    <div class="container">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <div class="container">
          <div class="row">
            <!--FORM-->
            <div class="col-md-5 offset-md-3">
              <div class="card">
                <div class="card-body">
                    <h5><%= fleet.code%></h5>
                  <form action="/admin/editfleet/<%= fleet.id %>" method="post">
                    <div class="form-group">
                      <input class="form-control" name="code" cols="80" value="<%= fleet.code %>">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="plate" value="<%= fleet.plate %>">
                    </div>
                    <div class="form-group">
                      <select class="form-control" type="text" name="type" placeholder="Type">
                        <option value="" disabled selected><%= fleet.type %></option>
                        <option value="Ground">Ground</option>
                        <option value="Ship">Ship</option>
                        <option value="Air">Air</option>
                      </select>
                    </div>
                    <!--<div class="form-group">
                      <select class="form-control" type="text" name="type" placeholder="Status">
                        <option value="<%=fleet.status%>" disabled selected><%= fleet.status %></option>
                        <option value="Available">Available</option>
                        <option value="On Road">In Transit</option>
                        <option value="Unavailable">Unavailable</option>
                      </select>
                    </div>-->

                      <div class="form-group">
                          <select class="form-control" type="text" name="tracking" value="<%=fleet.tracking%>">
                              <option value="" disabled selected><%= fleet.tracking %></option>
                              <option value="Garage">Garage</option>
                              <option value="On Track">On Track</option>
                          </select>
                      </div>
                    <button class="btn btn-primary" type="submit">
                      Update
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<% include template/footer.ejs%>
