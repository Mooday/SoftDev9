<%include template/header.ejs%>
<%include template/nav.ejs%>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Lista de Manifiestos de Carga</h1>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-auto ml-sm-auto col-lg-12 px-4">
                <div class="container">
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">Codigo de Manifiesto</th>
                                <th scope="col">Fecha de Creacion</th>
                                <th scope="col">Ruta</th>
                                <th scope="col">Flota</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            <%for(var i=0;i < manifest.length ;i++){%>
                            <tr>
                                <td><%=manifest[i].code%></td>
                                <td><%=manifest[i].date%></td>
                                <td><%=manifest[i].route%></td>
                                <td><%=manifest[i].fleet%></td>
                                <td>
                                    <a href="/admin/asignarpedido/<%= manifest[i].code %>" class="btn btn-primary fas fa-file-signature"></a>
                                    <a href="/admin/deletepedido/<%= manifest[i]._id %>" class="btn btn-danger fas fa-trash-alt"></a>
                                </td>
                            </tr>
                            <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%include template/footer.ejs%>