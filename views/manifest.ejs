<%include template/header.ejs%>
<%include template/nav.ejs%>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Creacion de Manifiesto de Carga</h1>
    </div>
    <%if(body_msg!=''){%>
    <div class="alert alert-success"><%=body_msg%></div>
    <%}%>
    <div class="container">
        <div class="container">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <form method="post" action="/admin/addmanifest">
                    <div class="form-group">
                        <label>Codigo de Manifiesto</label>
                        <input type="text" class="form-control" placeholder="Codigo de Manifiesto" name="code">
                    </div>
                    <div class="form-group">
                        <label>Fecha</label>
                        <input type="text" class="form-control" placeholder="Fecha" name="date">
                    </div>
                    <div class="form-group">
                        <label>Ruta</label>
                        <select class="form-control" type="text" name="route" placeholder="Ruta">
                            <option value="" disabled selected>Ruta</option>
                            <%for(i=0;i<route.length;i++){%>
                            <option value="<%=route[i].idn%>"><%=route[i].idn%></option>
                            <%}%>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Flota</label>
                        <select class="form-control" type="text" name="fleet" placeholder="Flota">
                            <option value="" disabled selected>Flota</option>
                            <%for(i=0;i<fleet.length;i++){%>
                            <option value="<%=fleet[i].code%>"><%=fleet[i].code%></option>
                            <%}%>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-default">Crear</button>
                </form>
            </div>
        </div>
    </div>

<%include template/footer.ejs%>